<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainViewLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sample.lmn.davide.getoutofwork.MainActivity">

    <TextView
        android:id="@+id/dateTimeLabelId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:layout_marginTop="@dimen/margin_16"
        android:text="Morning - Afternoon"/>
    <com.sample.lmn.davide.getoutofwork.views.HistoryCheckCadviewView
        android:id="@+id/historyCheckCardviewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16" />
    <com.sample.lmn.davide.getoutofwork.views.CheckCardviewView
        android:id="@+id/checkInCardviewId"
        android:layout_weight="2"
        android:layout_margin="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.sample.lmn.davide.getoutofwork.views.CheckCardviewView
        android:id="@+id/checkOutCardviewId"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
